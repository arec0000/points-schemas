{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StoriesList",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["steps"],
    "additionalProperties": false,
    "properties": {
      "steps": {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "video": { "type": "string" },
            "poster": { "type": "string" },
            "alt": { "type": "string" },
            "mdx": { "type": "string" },
            "duration": { "type": "number" },
            "background": { "type": "string" },
            "overlayBackground": { "type": "string" },
            "textColor": { "$ref": "#/definitions/textColor" },
            "padding": { "type": "string" },
            "margin": { "type": "string" },
            "maxWidth": { "$ref": "#/definitions/size" },
            "justify": { "enum": ["start", "center", "end"] },
            "align": { "enum": ["stretch", "start", "center", "end"] },
            "borderRaius": { "type": "string" }
          }
        }
      },
      "card": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "label": { "type": "string" },
          "labelLines": { "type": "number" },
          "labelColor": { "$ref": "#/definitions/color" },
          "video": { "type": "string" },
          "poster": { "type": "string" },
          "background": { "type": "string" }
        }
      },
      "progress": {
        "type": "object",
        "additionalProperties": false,
        "description": "Свойства прогресс бара",
        "properties": {
          "height": {
            "oneOf": [{ "$ref": "#/definitions/size" }, { "const": "xxs" }]
          },
          "inactiveColor": {
            "type": "string",
            "description": "Цвет неактивной части прогресса, по умолчанию серый"
          },
          "activeColor": {
            "type": "string",
            "description": "Цвет активной части прогресса, по умолчанию белый"
          }
        }
      },
      "loop": { "type": "boolean" },
      "crossColor": { "$ref": "#/definitions/color" },
      "textColor": { "$ref": "#/definitions/textColor" },
      "duration": { "type": "number" },
      "background": { "type": "string" },
      "overlayBackground": { "type": "string" },
      "padding": { "type": "string" },
      "margin": { "type": "string" },
      "maxWidth": { "$ref": "#/definitions/size" },
      "justify": { "enum": ["start", "center", "end"] },
      "align": { "enum": ["stretch", "start", "center", "end"] },
      "borderRaius": { "type": "string" }
    }
  },
  "definitions": {
    "color": {
      "enum": [
        "auto",
        "inherit",
        "white",
        "black",
        "gray90",
        "gray70",
        "gray30",
        "gray20",
        "blue",
        "blue30",
        "darkBlue",
        "darkBlue60",
        "darkBlue40",
        "spaceBlue",
        "lightBlue",
        "red",
        "pink",
        "purple",
        "orange",
        "primaryGradient"
      ]
    },
    "textColor": {
      "enum": [
        "auto",
        "inherit",
        "white",
        "black",
        "gray90",
        "gray70",
        "gray30",
        "gray20",
        "blue",
        "blue30",
        "darkBlue",
        "darkBlue60",
        "darkBlue40",
        "spaceBlue",
        "lightBlue",
        "red",
        "pink",
        "purple",
        "orange"
      ]
    },
    "size": { "enum": ["xs", "sm", "md", "lg", "xl", "2xl"] }
  }
}
