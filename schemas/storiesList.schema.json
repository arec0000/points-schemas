{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StoriesList",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["steps"],
    "additionalProperties": false,
    "properties": {
      "steps": {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "url": { "type": "string" },
            "poster": { "type": "string" },
            "alt": { "type": "string" },
            "mdx": { "type": "string" },
            "duration": { "type": "number" },
            "background": { "type": "string" },
            "overlayBackground": { "type": "string" },
            "textColor": {
              "$ref": "#/definitions/textColor"
            },
            "padding": { "type": "string" },
            "margin": { "type": "string" },
            "maxWidth": { "$ref": "#/definitions/size" },
            "justify": {
              "oneOf": [
                { "const": "start" },
                { "const": "center" },
                { "const": "end" }
              ]
            },
            "align": {
              "oneOf": [
                { "const": "stretch" },
                { "const": "start" },
                { "const": "center" },
                { "const": "end" }
              ]
            }
          }
        }
      },
      "label": { "type": "string" },
      "labelLines": { "type": "number" },
      "labelColor": { "$ref": "#/definitions/color" },
      "loop": { "type": "boolean" },
      "crossColor": { "$ref": "#/definitions/color" },
      "textColor": { "$ref": "#/definitions/textColor" },
      "posterIndex": { "type": "number" },
      "duration": { "type": "number" },
      "background": { "type": "string" },
      "overlayBackground": { "type": "string" },
      "padding": { "type": "string" },
      "margin": { "type": "string" },
      "maxWidth": { "$ref": "#/definitions/size" },
      "justify": {
        "oneOf": [
          { "const": "start" },
          { "const": "center" },
          { "const": "end" }
        ]
      },
      "align": {
        "oneOf": [
          { "const": "stretch" },
          { "const": "start" },
          { "const": "center" },
          { "const": "end" }
        ]
      }
    }
  },
  "definitions": {
    "color": {
      "enum": [
        "auto",
        "inherit",
        "white",
        "black",
        "gray90",
        "gray70",
        "gray30",
        "gray20",
        "blue",
        "blue30",
        "darkBlue",
        "darkBlue60",
        "darkBlue40",
        "spaceBlue",
        "lightBlue",
        "red",
        "pink",
        "purple",
        "orange",
        "primaryGradient"
      ]
    },
    "textColor": {
      "enum": [
        "auto",
        "inherit",
        "white",
        "black",
        "gray90",
        "gray70",
        "gray30",
        "gray20",
        "blue",
        "blue30",
        "darkBlue",
        "darkBlue60",
        "darkBlue40",
        "spaceBlue",
        "lightBlue",
        "red",
        "pink",
        "purple",
        "orange"
      ]
    },
    "size": {
      "oneOf": [
        { "const": "xs" },
        { "const": "sm" },
        { "const": "md" },
        { "const": "lg" },
        { "const": "xl" },
        { "const": "2xl" }
      ]
    }
  }
}
